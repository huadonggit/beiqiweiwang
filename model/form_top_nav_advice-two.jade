    form(name='adviceform')
        .t-n-list-box
            .t-n-list
                label(for="")
                    | 投诉类别
                label(for="" class="t-n-radio")
                    input(type="radio" name="class" value="advice").t-n-class
                    | 产品质量
                label(for="" class='t-n-radio')
                    input(type="radio" name="class" value="aq").t-n-class
                    | 服务质量
                label(for="" class='t-n-radio')
                    input.t-n-class(type="radio" name="class" value="other")
                    | 其它
            .t-n-list
                label(for="")
                    span.star *
                    | 姓名
                input.t-n-name(type="text" name="name")
            .t-n-list
                label(for="")
                    span.star *
                    | 手机
                input.t-n-phone(type="text" name="phone")
                label(for="")
                    span.star *
                    | E-mail
                input.t-n-e(type="text" name="email")
            .t-n-list
                label(for="")
                    | 投诉内容
                textarea.t-n-con(name="con" )
        .submit-box
            input.zp-reset(type="reset")
            input.zp-submit(type="submit")